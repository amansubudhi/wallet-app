{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    // "outDir": "dist",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "lib",
    "hooks"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}